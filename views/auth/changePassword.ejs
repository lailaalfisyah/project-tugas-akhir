<%- include('../layouts/header') %>

<section class="section bg-warning">
  <div class="container pt-5 pb-5">
    <div class="row d-flex justify-content-around">
        <div class="col-md-6">
            <h1 class="text-center">CHANGE PASSWORD</h1><br>
            
            <% if(messages.error) { %> 
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <p class="pt-1 pb-1 bg-danger text-light text-center text-uppercase fw-bold" role="alert">
                    <%= messages.error %>
                  </p>
                </div>
              </div>
            <% } %>
            
            <form method="POST" action="/changePassword">
                <div class="form-floating mb-3">
                  <input type="password" class="form-control" id="oldPassword" name="oldPassword" placeholder="Old Password" required>
                  <label for="oldPassword">Old Password</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="password" class="form-control" id="newPassword" name="newPassword" placeholder="New Password" minlength="6" required>
                  <label for="newPassword">New Password</label>
                </div><br>
                <button type="submit" class="btn btn-dark form-control">CHANGE</button>
              </form>
        </div>
    </div>
  </div>
</section>

<script src="assets/js/script.js"></script>
<script src="assets/js/jquery.js"></script> 
<script src="assets/js/popper.js"></script> 
<script src="assets/js/bootstrap.js"></script>	
</body>
</html>