<%- include('../layouts/header') %>

<section class="section bg-warning">
  <div class="container pt-5 pb-5">
    <div class="row d-flex justify-content-around">
        <div class="col-md-6">
            <h1 class="text-center">LOGIN FORM</h1><br>
            
            <% if(messages.error) { %> 
              <div class="row justify-content-center">
                <div class="col-md-8">
                  <p class="pt-1 pb-1 bg-danger text-light text-center text-uppercase fw-bold" role="alert">
                    <%= messages.error %>
                  </p>
                </div>
              </div>
            <% } %>
            
            <form method="POST" action="/login">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
                  <label for="username">Username</label>
                </div>
                <div class="form-floating mb-3">
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                  <label for="password">Password</label>
                </div><br>
                <button type="submit" class="btn btn-dark form-control">LOGIN</button>
              </form>
              <hr>
              <p class="text-dark text-center">Don't have an account yet? <a href="/register" class="text-reset fw-bold">Click to register!</a></p>
        </div>
    </div>
  </div>
</section>

<script src="assets/js/jquery.js"></script> 
<script src="assets/js/popper.js"></script> 
<script src="assets/js/bootstrap.js"></script>	
</body>
</html>