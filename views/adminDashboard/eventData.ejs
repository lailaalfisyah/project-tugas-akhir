<%- include('../layouts/header') %>

<%- include('../layouts/adminNavbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center text-warning">EVENT LIST</h1>
            <br><br>
            <form action="/admin/searchEvent">
              <div class="row">
                <div class="col-md-4">
                  <input type="search" class="form-control" name="keyword" placeholder="input keyword here ...">
                </div>
                <div class="col-md-2">
                  <button class="btn btn-outline-warning" type="submit"><i class="fas fa-search"></i> Search</button>
                </div>
                <div class="col-md-2 offset-md-4">
                  <a href="/admin/inputEvent" class="btn btn-warning"><i class="fa-solid fa-plus"></i> Add New Event</a><br><br>
                </div>
              </div>
            </form>
            <table class="table">
                <thead>
                  <tr class="text-center">
                    <th scope="col">Event ID</th>
                    <th scope="col">Token</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                    <th scope="col"></th>
                  </tr>
                </thead>                
                <tbody>
                  <% for (let i = 0; i < data.length; i++) { %>
                    <tr class="text-center">
                      <td><%= data[i].id %></td>
                      <td><%= data[i].token %></td>
                      <td><%= data[i].title %></td>
                      <td><%= convertedDate[i] %></td>
                      <td>
                        <a href="/admin/eventData/<%= data[i].id %> " class="btn btn-danger btn-sm">Detail</a>
                      </td>
                    </tr>
                  <% } %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>