<%- include('../layouts/header') %>

<%- include('../layouts/adminNavbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center text-warning">EVENT LIST</h1><br>
            <a href="/admin/inputEvent" class="btn btn-warning"><i class="fa-solid fa-plus"></i> Add New Event</a><br><br>
            <table class="table">
                <thead>
                  <tr class="text-center">
                    <th scope="col">Event ID</th>
                    <th scope="col">Token</th>
                    <th scope="col">Title</th>
                    <th scope="col">Date</th>
                    <th scope="col"></th>
                  </tr>
                </thead>                
                <tbody>
                <% data.forEach(i => { %>
                  <tr class="text-center">
                    <td><%= i.id %></td>
                    <td><%= i.token %></td>
                    <td><%= i.title%></td>
                    <td><%= i.dateStart %></td>
                    <td>
                      <a href="/admin/eventData/<%= i.id %> " class="btn btn-danger btn-sm">Detail</a>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>