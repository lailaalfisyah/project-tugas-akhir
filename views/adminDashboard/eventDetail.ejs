<%- include('../layouts/header') %>

<%- include('../layouts/adminNavbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-around shadow p-3">
      <div class="col-md-5">
        <img src="/assets/img/webinar2.jpg" class="img-thumbnail" alt="">
      </div>
      <div class="col-md-6">
        <h3 class="card-title text-warning"><%= data.title %></h3>
        <h5 class="card-title text-dark">Token: <%= data.token %></h5>
        <br><br>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-calendar-days"></i> <%= data.dateStart %></h5>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-clock"></i> <%= data.timeStart %> - <%= data.timeEnd %></h5>
        <br><br>
        <a href="/admin/editEvent/<%= data.id %>" class="btn btn-danger">
          <i class="fa-solid fa-pen-to-square"></i> Edit
        </a>
        <br>
        <span class="text-muted">Last updated at:</span><br>
        <span class="text-muted"><%= data.updatedAt %></span>
      </div>
    </div>
    <div class="row alert alert-warning text-black mt-5">
