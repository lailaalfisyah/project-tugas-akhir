<%- include('../layouts/header') %>

<%- include('../layouts/adminNavbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row">
        <div class="col">
            <h1 class="text-center text-warning">USER BIODATA</h1><br>
            <table class="table">
                <thead>
                  <tr class="text-center">
                    <th scope="col">User ID</th>
                    <th scope="col">Username</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Gender</th>
                  </tr>
                </thead>                
                <tbody>
                <% data.forEach(i => { %>
                  <tr class="text-center">
                    <td><%= i.id %></td>
                    <td><%= i.username %></td>
                    <td><%= i.fullName%></td>
                    <td><%= i.email %></td>
                    <td><%= i.gender %></td>
                    <td>
                      <a href="/admin/userData/<%= i.id %> " class="btn btn-danger btn-sm">Detail</a>
                    </td>
                  </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>