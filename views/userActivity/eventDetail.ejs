<%- include('../layouts/header') %>

<%- include('../layouts/navbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-around shadow p-3">
      <div class="col-md-5">
        <img src="/assets/img/eventPoster/<%= data.poster %>" class="img-thumbnail" alt="">
      </div>
      <div class="col-md-6">
        <h3 class="card-title text-warning"><%= data.title %></h3>
        <br><br>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-calendar-days"></i> <%= convertedDate %></h5>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-clock"></i> <%= convertedTimeStart %> - <%= convertedTimeEnd %> </h5>
        <br><br>
        <form method="POST" action="/eventRegistration/<%= data.id %>">
          <button type="submit" class="btn btn-danger"><i class="fa-solid fa-file-pen"></i> Registration</button>
        </form>
      </div>
    </div>
    <div class="row alert alert-warning text-black mt-5">
      <p><%= data.desc %></p>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>