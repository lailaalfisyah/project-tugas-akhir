<%- include('../layouts/header') %>

<%- include('../layouts/navbar') %>

<section class="section">
  <div class="container">
    <div class="row text-center">
      <% data.forEach(i => { %>
      <div class="col-md-4">
        <div class="card mb-3">
          <img src="/assets/img/bg-certif.jpg" class="card-img-top" alt="poster">
          <div class="card-body">
            <h5 class="card-title"><%= i.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= i.dateStart %></h6>
            <h6 class="card-subtitle mb-2 text-muted"><%= i.timeStart %> - <%= i.timeEnd %> </h6>
            <a href="/event/<%= i.id %>" class="btn btn-warning">Detail</a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>