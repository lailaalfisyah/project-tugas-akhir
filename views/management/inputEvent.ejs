<%- include('../layouts/header') %>

<%- include('../layouts/adminNavbar') %>

<section class="section mt-5 mb-5">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-md-6">
        <h2 class="text-center text-warning">INPUT EVENT</h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-4">
        <img src="/assets/img/bg-certif.jpg" class="img-thumbnail mx-auto rounded-circle" alt="" style="width: 15rem; height: 15rem;">
      </div>
      <div class="col-md-4">
        <form method="POST" action="/inputEvent">
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="token" name="token" placeholder="Full Name" required>
            <label for="token" class="form-label">Token</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="title" name="title" placeholder="Full Name" required>
            <label for="title" class="form-label">Title</label>
          </div>
          <div class="form-floating mb-3">
            <input type="date" class="form-control" id="dateStart" name="dateStart" placeholder="Full Name" required>
            <label for="dateStart" class="form-label">Date</label>
          </div>
          <div class="form-floating mb-3">
            <input type="time" class="form-control" id="timeStart" name="timeStart" placeholder="Full Name" required>
            <label for="timeStart" class="form-label">Time Start</label>
          </div>
          <div class="form-floating mb-3">
            <input type="time" class="form-control" id="timeEnd" name="timeEnd" placeholder="Full Name" required>
            <label for="timeEnd" class="form-label">Time End</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="desc" name="desc" placeholder="Full Name" required>
            <label for="desc" class="form-label">Description</label>
          </div>
          <br>
          <button type="submit" class="btn btn-danger form-control">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>