<%- include('../layouts/header') %>

<%- include('../layouts/navbar') %>

<section class="section">
  <div class="container">
    <div class="row justify-content-around">
      <div class="col-md-5">
        <img src="/assets/img/bg-certif.jpg" class="img-thumbnail" alt="">
      </div>
      <div class="col-md-6">
        <h3 class="card-title"><%= data.title %></h3>
        <br><br>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-calendar-days"></i> <%= data.dateStart %></h5>
        <h5 class="card-subtitle mb-2 text-muted"><i class="fa-solid fa-clock"></i> <%= data.timeStart %> - <%= data.timeEnd %> </h5>
        <br><br>
        <form method="POST" action="/eventRegistration/<%= data.id %>">
          <button type="submit" class="btn btn-danger"><i class="fa-solid fa-file-pen"></i> Registration</button>
        </form>
      </div>
    </div>
    <div class="row">
      <p><%= data.desc %></p>
    </div>
  </div>
</section>

<%- include('../layouts/footer') %>